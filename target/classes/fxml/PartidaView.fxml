<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="partidaView" prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="ahorcadoImagen" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="palabraLabel" text="________">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Label fx:id="letraLabel">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <right>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="puntosTextLabel" text="Puntos:" VBox.vgrow="NEVER">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="puntuacionLabel" alignment="CENTER" text="X Y">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="textField" prefWidth="300.0" />
            <Button fx:id="letraBoton" defaultButton="true" mnemonicParsing="false" onAction="#onLetraAction" text="Letra" />
            <Button fx:id="resolverBoton" mnemonicParsing="false" onAction="#onResolverAction" text="Resolver" />
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
